{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "boilerplate react, redux, node server",
  "main": "index.js",
  "scripts": {
    "production": "webpack -p --config ./config/webpack.production.config.js",
    "test": "jest --coverage",
    "watch:test": "npm test -- --watch",
    "dev": "npm-run-all --parallel watch:server watch:client",
    "dev-server": "webpack-dev-server --config ./config/webpack.config.js --inline --hot --history-api-fallback --host localhost",
    "watch:client": "webpack --config ./config/webpack.config.js --watch",
    "watch:server": "nodemon \"./src/server.js\" --watch \"./src\" --exec babel-node"
  },
  "author": "EXIT",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "express-history-api-fallback": "^2.2.1",
    "mongoose": "^4.10.8"
  },
  "devDependencies": {
    "axios": "^0.16.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.0.2",
    "css-loader": "^0.28.4",
    "enzyme": "^2.9.1",
    "eslint": "^4.5.0",
    "eslint-config-react-app": "^2.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.2.1",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^20.0.4",
    "nock": "^9.0.13",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-code-splitting": "^1.2.0",
    "react-dev-utils": "^3.1.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.2",
    "react-router-dom": "^4.1.2",
    "react-test-renderer": "^15.6.1",
    "redux": "^3.7.0",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.2.3",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "styled-jsx": "^1.0.10",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1",
    "webpack-livereload-plugin": "^0.11.0",
    "webpack-uglify-js-plugin": "^1.1.9"
  },
  "jest": {
    "moduleNameMapper": {
      "^.*\\.scss$": "./test/scssjest.js"
    }
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "jsx-a11y/href-no-hash": "off",
      "jsx-a11y/anchor-is-valid": [
        "warn",
        {
          "aspects": [
            "invalidHref"
          ]
        }
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  }
}
